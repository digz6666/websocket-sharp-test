<Window x:Class="ws_server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ws_server"
        mc:Ignorable="d"
        Title="WS Server" Width="355" Height="445" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="310"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btn_initialize" Content="Start" Click="initialize_Click"
                Width="Auto" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="0"
                Background="#FF1C96E5" BorderBrush="#FF1C96E5" Foreground="White"/>
        <Button x:Name="btn_send" Content="Send" Click="send_Click" IsEnabled="false"
                Width="Auto" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="1"
                Background="#FF2ECC71" BorderBrush="#FF2ECC71" Foreground="White"/>
    </Grid>
</Window>
